<% content_for :title, @year %>

<table class="table">
    <thead>
        <tr>
            <td>Th√®me</td>
            <td>Jours</td>
        </tr>
    </thead>
    <% @year.themes.each do |theme| %>
        <% days = @year.days_logged_for_theme(theme) %>
        <% next if days.zero? %>
        <tr>
            <td><%= link_to theme, theme %></td>
            <td><%= days %> jours</td>
        </tr>
    <% end %>
</table>

<table class="table">
    <thead>
        <tr>
            <td>Semaine</td>
            <td>Jours</td>
        </tr>
    </thead>
    <tbody>
      <% @year.weeks.each do |week| %>
        <tr>
          <td><%= link_to week, week %></td>
          <td><%= week.days_logged %></td>
        </tr>
      <% end %>
    </tbody>
</table>

